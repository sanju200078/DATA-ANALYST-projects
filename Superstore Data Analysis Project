from reportlab.platypus import SimpleDocTemplate, Paragraph, Image, Spacer
from reportlab.lib.styles import getSampleStyleSheet

pdf = SimpleDocTemplate("Pivot_Report.pdf")
styles = getSampleStyleSheet()
content = []

content.append(Paragraph("Superstore Sales Pivot Report", styles['Title']))
content.append(Spacer(1, 12))

content.append(Paragraph("Sales by Category", styles['Heading2']))
content.append(Image("sales_by_category.png", width=400, height=300))
content.append(Spacer(1, 12))

content.append(Paragraph("Sales by Region", styles['Heading2']))
content.append(Image("sales_by_region.png", width=400, height=300))
content.append(Spacer(1, 12))

content.append(Paragraph("Key Insights", styles['Heading2']))
content.append(Paragraph(
    "Technology and West/East regions contribute the highest sales, while the South region underperforms.",
    styles['Normal']
))

pdf.build(content)
--------------------------------------------------------------------------------------------------
files.download("Pivot_Report.pdf")
