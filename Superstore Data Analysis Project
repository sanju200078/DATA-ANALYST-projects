from docx import Document

doc = Document()
doc.add_heading('Superstore Sales Analysis â€“ Key Insights', level=1)

insights_list = [
    "Technology category in the East region contributes the highest share of total sales (11.63%), making it the strongest revenue driver.",
    "The West region shows consistently strong performance across all product categories, indicating a stable and mature market.",
    "The South region contributes the least to total sales across categories, highlighting a need for focused business strategies.",
    "Technology outperforms Furniture and Office Supplies in every region, confirming it as the most impactful category.",
    "The Central region demonstrates moderate and balanced sales contribution, suggesting scope for expansion through targeted initiatives."
]

for insight in insights_list:
    doc.add_paragraph(insight, style='List Number')

doc.save("Insights.docx")
------------------------------------------------------------------------------
from google.colab import files
files.download("Insights.docx")
-------------------------------------------------------------------------
import pandas as pd

# Sales by Category
pivot_category = pd.pivot_table(
    df,
    values='Sales',
    index='Category',
    aggfunc='sum'
).sort_values(by='Sales', ascending=False)

# Sales by Region & Segment
pivot_region_segment = pd.pivot_table(
    df,
    values='Sales',
    index='Region',
    columns='Segment',
    aggfunc='sum'
)

# Sales Contribution %
total_sales = df['Sales'].sum()
df['Sales Contribution %'] = (df['Sales'] / total_sales) * 100

pivot_sales_contribution = pd.pivot_table(
    df,
    values='Sales Contribution %',
    index=['Category','Region'],
    aggfunc='sum'
)
------------------------------------------------------------------------------------
with pd.ExcelWriter("Pivot_Report.xlsx", engine="openpyxl") as writer:
    pivot_category.to_excel(writer, sheet_name="Sales_by_Category")
    pivot_region_segment.to_excel(writer, sheet_name="Sales_by_Region_Segment")
    pivot_sales_contribution.to_excel(writer, sheet_name="Sales_Contribution_%")
-----------------------------------------------------------------------------------
from google.colab import files
files.download("Pivot_Report.xlsx")
------------------------------------------------------------------------------
import matplotlib.pyplot as plt
------------------------------------------------------------------------
pivot_category.plot(kind='bar', figsize=(7,5))
plt.title("Total Sales by Category")
plt.ylabel("Sales")
plt.tight_layout()
plt.savefig("sales_by_category.png")
plt.show()
-----------------------------------------------------------------------
df.groupby('Region')['Sales'].sum().plot(
    kind='pie', autopct='%1.1f%%', figsize=(6,6)
)
plt.title("Sales Distribution by Region")
plt.ylabel("")
plt.tight_layout()
plt.savefig("sales_by_region.png")
plt.show()
