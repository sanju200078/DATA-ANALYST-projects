import pandas as pd

df = pd.read_csv("/content/superstoredataset/train.csv")
df.head()
--------------------------------------------------------
# Missing values
df.isnull().sum()

# Convert date
df['Order Date'] = pd.to_datetime(df['Order Date'], errors='coerce')

# Remove duplicates
df.drop_duplicates(inplace=True)

# Clean categorical columns
for col in ['Category', 'Region', 'Segment']:
    df[col] = df[col].str.strip()
-----------------------------------------------------------------
pivot_category = pd.pivot_table(
    df,
    values='Sales',
    index='Category',
    aggfunc='sum'
).sort_values(by='Sales', ascending=False)
--------------------------------------------------------------
pivot_region_segment = pd.pivot_table(
    df,
    values='Sales',
    index='Region',
    columns='Segment',
    aggfunc='sum'
)
--------------------------------------------------------------------
df.columns
-------------------------------------------------------------------
total_sales = df['Sales'].sum()

df['Sales Contribution %'] = (df['Sales'] / total_sales) * 100
-------------------------------------------------------------------
pivot_sales_contribution = pd.pivot_table(
    df,
    values='Sales Contribution %',
    index=['Category','Region'],
    aggfunc='sum'
)

pivot_sales_contribution
